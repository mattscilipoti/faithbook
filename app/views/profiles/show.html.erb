<div class="content">
  <h2>
    <%= @profile.full_name %> <%= link_to "edit profile", edit_profile_path(@profile) %>
  </h2>
  <%= image_tag(@profile.photo_url) %>
  <p>Born:
    <%= @profile.birth_date %>
  </p>
  <p>Education:
    <%= @profile.education %>
  </p>
  <p>About <%= @profile.full_name %>:
    <%= @profile.about_me %>
  </p>
  <span id="prayer_counter">
    0
  </span> people are praying for <%= @profile.full_name %>
  <p>
    <button type="button" onclick="sendPrayer()">
      Send <%= @profile.full_name %> a prayer!
    </button>
  </p>
</div>

<div class="comments">
  <h2>
    Comments <%= link_to "add comment", new_profile_comment_path(@profile, @comment) %>
  </h2>

<ul>
  <% @profile.comments.each do |comment| %>
      <li>
        <%= comment.full_name %>
        <%= image_tag(comment.photo_url) %>
        <div class="comment_date_time">
          <%= comment.date_time %>
        </div>
        <p>
          <%= comment.content %>
        </p>
        <p>
          <%= link_to "edit comment", edit_profile_comment_path(@profile, comment) %>
        </p>
      </li>
      <% end %>
    </ul>
  </div>
